import random
print("Welcome to Game")
computerscore=0
userscore=0
def game():
    global computerscore,userscore
    print("Please select one of the following\nRock\nPaper\nScissor")
    a=["Rock","Paper","Scissor"]
    computer=random.choice(a)
    user=input("Enter your choice")
    if(user==computer):
        print("DRAW! USER",user,"COMPUTER",computer)
    elif(user=="Rock" and computer =="Paper") or\
    (user=="Paper" and computer=="Scissor") or\
    (user=="Scissor" and computer=="Rock"):
        print("YOU LOSE! USER",user,"COMPUTER",computer)
        computerscore+=1
    else :
        print("YOU WIN! USER ",user,"COMPUTER",computer)
        userscore+=1
while True:
    print("Do u want to play?")
    choice=input("Press y for yes Press n for no")
    if (choice in ["Y","y"]):
        game()
    elif(choice in ["N","n"]):
        print("Thank Your")
        print("USER",userscore)
        print("COMPUTER",computerscore)
        break
    else :
        print("Enter valid choice")
